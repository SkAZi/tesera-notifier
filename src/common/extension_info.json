{
  "name": "Tesera Notifier",
  "version": "2.0.201", 
  "description": "Tesera Notifier extension by nastolkus and SkAZi",
  "creator": "nastolkus, SkAZi", 
  
  "homepage_url": "http://nastolkus.com/naster/",

  "browser_button": {
    "caption": "Tesera Notifier", 
    "icon": "icons/button.png", 
    "tooltipText": "Tesera Notifier",
    "popup": {
      "url": "popup.html",
      "width": 400,
      "height": 596
    }
  }, 

  "permissions": {
    "content_scripts": ["http://tesera.ru/*", "http://www.tesera.ru/*"],
    "--xhr": ["http://tesera.ru/*", "http://www.tesera.ru/*"],
    "tabs": true,
    "context_menu": true,
    "web_navigation": true,
    "notifications": false,
    "cookies": false
  },

  "background_scripts": [
    "js/lib/zepto.js",
    "js/utils.js",
    "js/core.js",
    "js/models.js",
    "js/background.js"
  ], 

  "content_scripts": [
    "js/inject.js"
  ],

  "update_path_url": "https://tesera.potapoff.org/tesera-notifier/",
  "--options_page": "options.html"
}